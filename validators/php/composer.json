{
    "name": "openapia/validator-php",
    "description": "PHP validator for OpenAPIA specifications",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Fabio Guin"
        }
    ],
    "require": {
        "php": ">=8.0",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "OpenAPIA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenAPIA\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "validate": "php cli.php -f ../spec/openapia-0.1.yaml"
    },
    "bin": [
        "cli.php"
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
